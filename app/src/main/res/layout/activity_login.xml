<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/regis_bg"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:background="@mipmap/login_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="40dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@mipmap/login_user" />

        <EditText
            android:id="@+id/username_ed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_value_dp45"
            android:layout_marginLeft="10dip"
            android:background="@color/transparency"
            android:hint="@string/login_user"
            android:maxLength="20"
            android:textColor="@color/translucent"
            android:textColorHint="@color/translucent"
            android:textSize="@dimen/dimen_value_sp14" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@color/translucent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@mipmap/login_paw" />

        <EditText
            android:id="@+id/password_ed"
            android:layout_width="0dip"
            android:layout_height="@dimen/dimen_value_dp45"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@color/transparency"
            android:hint="@string/login_paw"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/translucent"
            android:textColorHint="@color/translucent"
            android:textSize="@dimen/dimen_value_sp14" />

        <TextView
            android:id="@+id/showpassword"
            android:layout_width="@dimen/dimen_value_dp25"
            android:layout_height="@dimen/dimen_value_dp25"
            android:layout_marginEnd="@dimen/dimen_value_dp2"
            android:layout_marginRight="@dimen/dimen_value_dp2"
            android:background="@mipmap/showpw2" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@color/translucent" />

    <Button
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:layout_marginTop="50dip"
        android:background="@drawable/login_bt"
        android:text="@string/login"
        android:textSize="@dimen/dimen_value_sp16" />



</LinearLayout>
