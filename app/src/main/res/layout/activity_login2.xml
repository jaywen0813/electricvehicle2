<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@mipmap/login_bg"
    tools:context=".ui.activity.Login2Activity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="英特诺物流库存管理系统"
        android:textSize="@dimen/dimen_value_sp24"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_value_dp50"
        android:layout_marginRight="@dimen/dimen_value_dp50"
        android:layout_marginTop="@dimen/dimen_value_dp90"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >



        <EditText
            android:id="@+id/username_ed"
            android:layout_width="0dip"
            android:layout_height="@dimen/dimen_value_dp45"
            android:layout_marginLeft="@dimen/dimen_value_dp10"
            android:layout_weight="1"
            android:background="@color/transparency"
            android:hint="@string/login_user"
            android:maxLength="20"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/dimen_value_sp14"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyz"
            />
        <ImageView
            android:id="@+id/showphone"
            android:layout_width="@dimen/dimen_value_dp25"
            android:layout_height="@dimen/dimen_value_dp25"
            android:src="@mipmap/shanchu" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="@dimen/dimen_value_dp50"
        android:layout_marginRight="@dimen/dimen_value_dp50"
        android:background="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_value_dp50"
        android:layout_marginRight="@dimen/dimen_value_dp50"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >



        <EditText
            android:id="@+id/password_ed"
            android:layout_width="0dip"
            android:layout_height="@dimen/dimen_value_dp45"
            android:layout_marginLeft="@dimen/dimen_value_dp10"
            android:layout_weight="1"
            android:background="@color/transparency"
            android:hint="@string/login_paw"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/dimen_value_sp14" />

        <ImageView
            android:id="@+id/showpassword"
            android:layout_width="@dimen/dimen_value_dp25"
            android:layout_height="@dimen/dimen_value_dp25"
            android:layout_marginEnd="@dimen/dimen_value_dp2"
            android:layout_marginRight="@dimen/dimen_value_dp2"
            android:src="@mipmap/showpw2" />

        <ImageView
            android:id="@+id/showpassword1"
            android:layout_width="@dimen/dimen_value_dp25"
            android:layout_height="@dimen/dimen_value_dp25"
            android:layout_marginEnd="@dimen/dimen_value_dp2"
            android:layout_marginRight="@dimen/dimen_value_dp2"
            android:src="@mipmap/showpw1"
            android:visibility="gone"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="@dimen/dimen_value_dp50"
        android:layout_marginRight="@dimen/dimen_value_dp50"
        android:background="@color/white" />

    <Button
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_value_dp50"
        android:layout_marginRight="@dimen/dimen_value_dp50"
        android:layout_marginTop="@dimen/dimen_value_dp60"
        android:background="@drawable/login_bt"
        android:text="@string/login"
        android:textSize="@dimen/dimen_value_sp16"
        android:textColor="@color/color_2282EE"
        />



</LinearLayout>