<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".model.setting.LoginSettingActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_3d3d3d"
        android:textSize="@dimen/dimen_value_sp18"
        android:text="请填写网址"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_value_dp50"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_value_dp20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_3d3d3d"
            android:textSize="@dimen/dimen_value_sp14"
            android:text=""
            android:layout_marginLeft="@dimen/dimen_value_dp10"
            />
        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_3d3d3d"
            android:textSize="@dimen/dimen_value_sp14"
            android:text="https://api.zrcloud.me/interroll/"
            android:layout_marginRight="@dimen/dimen_value_dp10"
            />


    </LinearLayout>

    <com.flyco.roundview.RoundTextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_value_dp50"
        app:rv_cornerRadius="@dimen/dimen_value_dp5"
        app:rv_backgroundColor="@color/colorPrimary"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_value_sp15"
        android:text="确   定"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_value_dp20"
        />


</LinearLayout>