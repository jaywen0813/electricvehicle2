<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical"
    tools:context=".ui.activity.TakePhotoActivity">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_value_dp140"
        android:background="@mipmap/detail_bg"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/title_layout_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_value_dp50"
            >

            <LinearLayout
                android:id="@+id/back_layout"
                android:layout_width="50dip"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:layout_width="@dimen/dimen_value_dp15"
                    android:layout_height="@dimen/dimen_value_dp15"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_value_dp10"
                    android:src="@mipmap/left_back"
                    >
                </ImageView>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_layer_head"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/regis_title"
                android:textSize="@dimen/dimen_value_dp20"/>

            <LinearLayout
                android:id="@+id/navigation_user_layout"
                android:layout_width="@dimen/dimen_value_dp60"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_value_dp10"
                android:visibility="invisible"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/farm_input_save"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:text="编辑"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/dimen_value_sp15"/>
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_value_dp20"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_value_sp15"
            android:text="杨小寒"
            android:layout_marginLeft="@dimen/dimen_value_dp10"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_value_dp70"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dimen_value_dp10"
                android:layout_marginTop="@dimen/dimen_value_dp5"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_chepai"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="车牌号：湘K29001"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_value_sp13"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_vin"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="车架号：LNG0001001"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_value_sp13"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dimen_value_dp10"
                android:layout_marginTop="@dimen/dimen_value_dp5"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_xinghao"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="品牌型号：雅迪"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_value_sp13"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="联系方式：13419608877"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_value_sp13"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_value_dp50"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_3d3d3d"
            android:textSize="@dimen/dimen_value_sp13"
            android:text="GPS设备码"
            android:layout_marginLeft="@dimen/dimen_value_dp10"
            />
        <TextView
            android:id="@+id/tv_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_989898"
            android:textSize="@dimen/dimen_value_sp13"
            android:text="点击扫码取得GPS设备码"
            android:layout_marginLeft="@dimen/dimen_value_dp10"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_value_dp1"
            android:layout_weight="1"
            />

        <LinearLayout
            android:id="@+id/ll_saomiao"
            android:layout_width="@dimen/dimen_value_dp50"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="@dimen/dimen_value_dp10"
            >

            <ImageView
                android:layout_width="@dimen/dimen_value_dp20"
                android:layout_height="@dimen/dimen_value_dp20"
                android:src="@mipmap/saoyisao"
                />

        </LinearLayout>



    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_value_dp190"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_value_dp10"
        >
        <ImageView
            android:id="@+id/img_photo1"
            android:layout_width="@dimen/dimen_value_dp320"
            android:layout_height="@dimen/dimen_value_dp130"
            android:src="@mipmap/detail_take_photo"

            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_value_sp13"
            android:textColor="@color/color_3d3d3d"
            android:text="“设备安装安好位置”的照片"
            android:layout_below="@id/img_photo1"
            android:layout_marginTop="@dimen/dimen_value_dp5"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_value_dp0.5"
        android:background="@color/color_bfbfbf"
        android:layout_marginLeft="@dimen/dimen_value_dp10"
        android:layout_marginRight="@dimen/dimen_value_dp10"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_value_dp190"
        android:gravity="center"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/img_photo2"
            android:layout_width="@dimen/dimen_value_dp320"
            android:layout_height="@dimen/dimen_value_dp130"
            android:src="@mipmap/detail_take_photo"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_value_sp13"
            android:textColor="@color/color_3d3d3d"
            android:text="“带有完整号牌安装的车辆全景”的照片"
            android:layout_below="@id/img_photo2"
            android:layout_marginTop="@dimen/dimen_value_dp5"
            />


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_tijiao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_value_dp45"
        android:text="提 交"
        android:textColor="@color/white"
        android:background="@color/color_989898"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_value_dp10"
        android:layout_marginRight="@dimen/dimen_value_dp10"
        android:layout_marginTop="@dimen/dimen_value_dp20"
        android:visibility="invisible"
        />

       </LinearLayout>
   </ScrollView>
</LinearLayout>