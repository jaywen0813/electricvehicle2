<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >





        <LinearLayout
            android:id="@+id/ll_bg"
            android:layout_width="@dimen/dimen_value_dp200"
            android:layout_height="@dimen/dimen_value_dp200"
            android:orientation="vertical"
            android:background="@drawable/shape_takephoto_success"
            android:layout_marginTop="@dimen/dimen_value_dp50"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dimen_value_dp20"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回到首页"
                    android:textColor="@color/color_2282EE"
                    android:textSize="@dimen/dimen_value_sp12"
                    android:background="@drawable/shape_tv_back_bg"
                    android:paddingTop="@dimen/dimen_value_dp5"
                    android:paddingBottom="@dimen/dimen_value_dp5"
                    android:paddingRight="@dimen/dimen_value_dp8"
                    android:paddingLeft="@dimen/dimen_value_dp8"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_value_dp1"
                    android:layout_weight="1"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="继续新增"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_value_sp12"
                    android:background="@drawable/shape_tv_back_bg2"
                    android:paddingTop="@dimen/dimen_value_dp5"
                    android:paddingBottom="@dimen/dimen_value_dp5"
                    android:paddingRight="@dimen/dimen_value_dp8"
                    android:paddingLeft="@dimen/dimen_value_dp8"
                    android:layout_marginRight="@dimen/dimen_value_dp25"
                    android:visibility="gone"
                    />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_value_dp25"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/img_tijiao"
                android:layout_width="@dimen/dimen_value_dp150"
                android:layout_height="@dimen/dimen_value_dp150"
                android:src="@mipmap/tijiao_success"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交成功!"
                android:textColor="@color/color_3d3d3d"
                android:textSize="@dimen/dimen_value_sp15"
                android:layout_below="@id/img_tijiao"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_close"
            android:layout_width="@dimen/dimen_value_dp50"
            android:layout_height="@dimen/dimen_value_dp50"
            android:gravity="center"
            android:layout_below="@id/ll_bg"
            android:layout_marginTop="@dimen/dimen_value_dp80"
            android:layout_marginLeft="@dimen/dimen_value_dp75"
            >
            <ImageView
                android:layout_width="@dimen/dimen_value_dp20"
                android:layout_height="@dimen/dimen_value_dp20"
                android:src="@mipmap/close_success"
                />
        </LinearLayout>




</RelativeLayout>